    <script type="text/javascript">
        function addToCartByGoodsNo(goodsNo,ordCount,islayerUI,layerid, categoryNumber) {
            if (goodsNo <= 0) { alert('상품을 선택하세요.'); return; }
            if (categoryNumber == null) { categoryNumber = ""; }

            yes24GU.checkValidGoods(goodsNo, false,
                function (isSuccess, data) {
                    if (isSuccess) {
                        var cartData = yes24GU.getCartDataByNo(goodsNo, 1, ordCount, '');

                        if (islayerUI) {
                            var msg = yes24GU.ajaxCartData(cartData, categoryNumber);
                            if (msg == '') $("#" + layerid).show();
                            else alert(msg);
                       
	                    } else {
	                        yes24GU.submitCartData(cartData, categoryNumber);
	                    }
                    }
                    else {
                        yes24GU.showCartError(data.ErrorCodes[0], data.Goods[0], '');
                    }
                },
                function (data) { }
            );
        }
           
        function addToMyListByGoodsNo(goodsNo) {
            yes24GU.checkValidGoods(goodsNo, false,
                function (isSuccess, data) {
                    if (isSuccess) {
                        centerNewWinNoScroll(YES_BLOG_URL + '/yes24/listAddGoodsPop.aspx?goodsno=' + goodsNo, 'addinlist', "320", "180");
                    }
                    else {
                        yes24GU.showCartError(data.ErrorCodes[0], data.Goods[0], '');
                    }
                },
                function (data) { }
            );
        }

        function buyWithoutCartByGoodsNo(goodsNo, ordCount, categoryNumber, entrNo, memNo) {
            if (goodsNo <= 0) { alert('상품을 선택하세요.'); return; }
            if (!loginCheck()) {
                if (categoryNumber == "018") {
                    var result = "";
                    if (window.showModalDialog) {
                        var fileName = "/Common/FTPopUp_Login.aspx";
                        var dlgStyle = "dialogHeight: 292px; dialogWidth:282px; dialogTop: ((availHeight /2) - (dialogHeight/2 ) )px; dialogLeft: ((availWidth /2) - (dialogWidth/2 ) )px; scroll:0; help:0; status:0;";
                        result = showModalDialog(fileName, window, dlgStyle);
                    }
                }
                else if (!loginCheck()) {
                    if (entrNo != null && memNo != null) {
                        if (yes24GU.checkSeller(entrNo, memNo) == "Y") { alert('중고샵판매자 본인의 상품은 구매하실 수 없습니다.'); }
                        else {
                            yes24GU.checkUsedHub(goodsNo, YES_DIRECT_ORDER_URL + yes24GU.getOrderData(goodsNo, "1", ordCount, categoryNumber, "N", ''));
                        }
                    } else {
                        yes24GU.checkUsedHub(goodsNo, YES_DIRECT_ORDER_URL + yes24GU.getOrderData(goodsNo, "1", ordCount, categoryNumber, "N", ''));
                    }
                }
            } else {
                if (entrNo != null && memNo != null) {
                    if (yes24GU.checkSeller(entrNo, memNo) == "Y") { alert('중고샵판매자 본인의 상품은 구매하실 수 없습니다.'); }
                    else { yes24GU.checkUsedHub(goodsNo, YES_DIRECT_ORDER_URL + yes24GU.getOrderData(goodsNo, "1", ordCount, categoryNumber, "Y", '')); }
                } else {
                    yes24GU.checkUsedHub(goodsNo, YES_DIRECT_ORDER_URL + yes24GU.getOrderData(goodsNo, "1", ordCount, categoryNumber, "Y", ''));
                }
            }
        };

        //중고샵 허브 바로 구매
        GoodsUtil.prototype.checkUsedHub = function (goodsNo, url) {
            this.checkValidGoods(goodsNo, false,
                function (isSuccess, data) {
                    if (isSuccess) {
                        location.href = url;
                    }
                    else {
                        yes24GU.showCartError(data.ErrorCodes[0], data.Goods[0], '');
                    }
                },
                function (data) { }
            );
        };


        function canBuyGoodsByAge(ageLmtYn,userAge,lmtAge){
            var bRet = true;
            try {
                if (ageLmtYn == "Y")
        //            if (lmtAge > userAge && lmtAge >= 19)
                        bRet = false;
            } catch (Exception) { alert("연령 체크 오류 입니다."); }
            return bRet;
        }

        // 성인인증 관련
        function checkAdultAuth(ageLmtYn, lmtAge, userAge) {
            if (!this.canBuyGoodsByAge(ageLmtYn,userAge,lmtAge)) {
                if (!loginCheck()) { 
                    alert("["+lmtAge+"세 이상] 나이제한 상품입니다. 로그인 후 이용하세요.");
                    document.location.href = "https://www.yes24.com/Templates/FTLogin.aspx?ReturnURL=" + encodeURIComponent(location.href);
                    return false;
                } else {
                    if (userAge >= lmtAge){   
                        if(lmtAge >= 19) {     
                            var AdultAuthYN = GetCookie("AdultAuthYN");  
                            if (AdultAuthYN == "N") {
                                alert("[" + lmtAge + "세 이상] 나이제한 상품입니다.");
                                return false;
                            }
                            else if(AdultAuthYN != "Y") {
                                location.href = "https://www.yes24.com/Member/Adult.aspx?ReturnURL=" + encodeURIComponent(location.href);
                                return false;
                            }
                        } 
                    } else {
                        alert("["+lmtAge+"세 이상] 나이제한 상품입니다.");
                        return false;
                    }
                }
            }
        }

        $(document).ready(function () {
            $.ajaxSetup({ cache: false });

            var $font = $('a.btnFontName[href=NanumGothic] img');
            $font.attr('src', $font.attr('src').replace('_off', '_on'));

            $('a.btnFontName').click(function () {
                var $this = $(this);

                var fontName = $this.attr('href');
                $('#articleTop').css('font-family', fontName);
                $('div.viewType04').css('font-family', fontName);
                $.cookie("fontName", fontName);

                if (fontName == 'NanumGothic') {
                    $('#nanumTooltip').hide();
                }

                $('a.btnFontName img').each(function () {
                    var $img = $(this);
                    if ($img.parent().attr('href') == fontName) {
                        $img.attr('src', $img.attr('src').replace('_off', '_on'));
                    }
                    else {
                        $img.attr('src', $img.attr('src').replace('_on', '_off'));
                    }
                });
                return false;
            });

            var varSize = 0;
            $('p.cont').css('font-size', parseFloat($.cookie("fontSize-1")) + 'px');
            $('ul.writer').css('font-size', parseFloat($.cookie("fontSize-1")) + 'px');
            $('#articleTop p.title').css('font-size', parseFloat($.cookie("fontSize-2")) + 'px');
            $('#articleTop s.title').css('font-size', parseFloat($.cookie("fontSize-3")) + 'px');
            $('.viewType04 span').each(function() {
                var sFont= $(this).css('font-size');
                if(sFont != "" && sFont != undefined && sFont != null)
                {
                    varSize =  parseFloat(sFont) + (parseFloat($.cookie("fontSize-4")) / 10);
                    $(this).css('font-size', varSize + 'px');
                }
            });
            $('.viewType04 font').each(function() {
                var sFont= $(this).css('font-size');
                if(sFont != "" && sFont != undefined && sFont != null)
                {
                    varSize =  parseFloat(sFont) + (parseFloat($.cookie("fontSize-5")) / 10);
                    $(this).css('font-size', varSize + 'px');
                }
            });
            $('.viewType04 p').each(function() {
                var sFont= $(this).css('font-size');
                if(sFont != "" && sFont != undefined && sFont != null)
                {
                    varSize =  parseFloat(sFont) + (parseFloat($.cookie("fontSize-6")) / 10);
                    $(this).css('font-size', varSize + 'px');
                }
            });

            $('a.btnFontSize').click(function () {
                
                var fontSize = $.cookie("fontSize");
                if (!fontSize) fontSize = "100";
                fontSize = $('p.cont').css('font-size').replace("px", "");

                var addSize = parseInt($(this).attr('href'));
                var varSize =  parseFloat(fontSize) + (parseFloat(addSize) / 10);
                
                $('p.cont').css('font-size', varSize + 'px');
                $('ul.writer').css('font-size', varSize + 'px');
                $.cookie("fontSize-1", varSize);

                var titleFont= $('#articleTop p.title').css('font-size');
                varSize =  parseFloat(titleFont) + (parseFloat(addSize) / 10);
                $('#articleTop p.title').css('font-size', varSize + 'px');
                $.cookie("fontSize-2", varSize);

                var sTitleFont= $('#articleTop p.stitle').css('font-size');
                varSize =  parseFloat(sTitleFont) + (parseFloat(addSize) / 10);
                $('#articleTop p.stitle').css('font-size', varSize + 'px');
                $.cookie("fontSize-3", varSize);

                $('.viewType04 span').each(function() {
                    var sFont= $(this).css('font-size');
                    if(sFont != "" && sFont != undefined && sFont != null)
                    {
                        varSize =  parseFloat(sFont) + (parseFloat(addSize) / 10);
                        $(this).css('font-size', varSize + 'px');
                    }
                });
                
                if(!isNaN($.cookie("fontSize-4"))) {
                    $.cookie("fontSize-4", parseFloat($.cookie("fontSize-4")) + addSize);   
                }
                else{
                    $.cookie("fontSize-4", addSize);
                }

                $('.viewType04 font').each(function() {
                    var sFont= $(this).css('font-size');
                    if(sFont != "" && sFont != undefined && sFont != null)
                    {
                        varSize =  parseFloat(sFont) + (parseFloat(addSize) / 10);
                        $(this).css('font-size', varSize + 'px');
                    }
                });
                if(!isNaN($.cookie("fontSize-5"))) {
                    $.cookie("fontSize-5", parseFloat($.cookie("fontSize-5")) + addSize);   
                }
                else{
                    $.cookie("fontSize-5", addSize);
                }

                $('.viewType04 p').each(function() {
                    var sFont= $(this).css('font-size');
                    if(sFont != "" && sFont != undefined && sFont != null)
                    {
                        varSize =  parseFloat(sFont) + (parseFloat(addSize) / 10);
                        $(this).css('font-size', varSize + 'px');
                    }
                });
                if(!isNaN($.cookie("fontSize-6"))) {
                    $.cookie("fontSize-6", parseFloat($.cookie("fontSize-6")) + addSize);   
                }
                else{
                    $.cookie("fontSize-6", addSize);
                }
                
                //var contentSize = parseFloat($(".viewType04").css('font-size').replace("px", ""));
                //varSize = parseFloat(contentSize) + (parseFloat(addSize) / 10);
                

                return false;
            });

            $('img.fontSize').hover(
                function () { $(this).attr('src', $(this).attr('src').replace('_off', '_on')); },
                function () { $(this).attr('src', $(this).attr('src').replace('_on', '_off')); }
            );

            $('#printLink').click(function () {
                var $this = $(this);
                $chyes.dialogPrint($this.attr('href'));
                return false;
            });

            //            $('.AuthInfoLink').click(function () {
            //                var $this = $(this);
            //                $chyes.dialogManInfo($this.attr('href'));
            //                return false;
            //            });

            $('#scrapLink').click(function () {
                var $this = $(this);
                var pos = $this.position();

                $('#scrapLayer').css({
                    position: "absolute",
                    top: (pos.top + $this.height()) + "px",
                    left: pos.left + "px"
                }).toggle();

                return false;
            });

            $('#scrapYesblog').click(function () {
                var url = $chyes.getHost('blog') + "/yes24/ChyesScrapPop.aspx?art_no=37821";
                $chyes.popupWindow(url, 330, 220, "scrapBlog");
                return false;
            });

            $('#scrapCopy').click(function () {
                var artUrl = $chyes.getHost('chyes') + '/Article/View/37821';
                var content = '<p><img width="29" height="16" align="absMiddle" src="http://image.yes24.com/images/chyes_new/03_BookMedia/scrap/Bl_Source.gif"/>' + '<a href="' + artUrl + '" target="_blank">' + artUrl + '</a></p>'
                            + $('div.viewType04').html();

                copyToClipboard(content);
                alert('HTML 입력창에서 붙여 넣기(Ctrl+V)를 실행하십시오');
                return false;
            });

            $('a[rel=scrapItem]').click(function () {
                $('#scrapLayer').hide();
            });

            $("#currentCategoryLinkUrl").attr('href', $("#currentCategoryLinkUrlAnchor").attr('href'));

            $('a.btnCart').click(function () {
                var $this = $(this);
                if(checkAdultAuth($this.attr("age_lmt_yn"),$this.attr("lmt_age"),0) == false) {
                    return false;
                }

                addToCartByGoodsNo($this.attr("goods"), 1, false);
                return false;
            });

            $('a.btnList').click(function () {
                if (!loginCheck()) {
                    if (confirm('로그인이 필요합니다.\r\n로그인 하시겠습니까?')) {
                        document.location.href = "https://www.yes24.com/Templates/FTLogin.aspx?ReturnURL=" + encodeURIComponent(location.href);
                        return false;
                    }
                    else {
                        return false;
                    }
                }

                var $this = $(this);
                if(checkAdultAuth($this.attr("age_lmt_yn"),$this.attr("lmt_age"),0) == false) {
                    return false;
                }

                addToMyListByGoodsNo($(this).attr("goods"));
                return false;
            });

            $('a.btnBuy').click(function () {
                var $this = $(this);

                if(checkAdultAuth($this.attr("age_lmt_yn"),$this.attr("lmt_age"),0) == false) {
                    return false;
                }

                buyWithoutCartByGoodsNo($this.attr("goods"), 1, '', -1, 0);
                return false;
            });

            $('a[rel=movie_gallery]').click(function () {
                var $this = $(this);
                $chyes.dialogMovie($this.attr('href'));
                return false;
            });

            $('a[rel=photo_gallery]').click(function () {
                var $this = $(this);
                $chyes.dialogPhoto($this.attr('href'));
                return false;
            });

            $('#btnNanumGothic').mouseover(function () {
                var $this = $(this);
                var pos = $this.position();

                if ($.cookie("fontName") != 'NanumGothic') {
                    $('#nanumTooltip').css({ top: (pos.top + $this.height()) + "px" }).show();
                }
            });

            $('#btnNanumGothicClose').click(function () {
                $('#nanumTooltip').hide();
            });

    });
    </script>

