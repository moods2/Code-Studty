    <script type="text/javascript">
        var isLogin = loginCheck();
        var isArticle = 'True';
        var reviewDesc = '독자 리뷰는 로그인 하신 후 남기실 수 있습니다.';
        var isEnabled = false;

        $(document).ready(function () {

            var sDate = new Date('2020-04-02T00:00:00Z');
            var eDate = new Date('2020-04-14T23:59:59Z');
    
            isEnabled = false;
            
            var tDate = new Date();
            if (sDate <= tDate && tDate < eDate) {
                reviewDesc = '총선 기간에는 독자 리뷰가 일시적으로 제한됩니다.';
                isEnabled = true;
            }

            $('#replyEvent').click(function(){
                var pos = $('#replyEvent').position();
                $('#userEventInfo').css({
                    position: "absolute",
                    top: (pos.top + 20) + "px",
                    left: (pos.left - 290) + "px"
                }).toggle();
                return false;
            });

            $('#btnEventClose').click(function(){
                $('#userEventInfo').hide();
                return false;
            });

            ReplyLoad();
            //JSRenderHelperSetting();

            if (!isLogin) {
                $("textarea[txtarea=replyCont]").watermark(reviewDesc);
            }

            $("#replyMore").click(function () {
                var talkNo = $("#replyView").children("div").last().attr("talkNo");

                if (talkNo == null) {
                    ReplyLoad();
                    return false;
                }

                ReplyNext(talkNo);
            });

            var check = false;
            if(isEnabled == false)
                {
                $("textarea[txtarea=replyCont]").focus(function () {
                if (!isLogin && check == false) {
                    alert("로그인 후 작성 가능합니다.");
                    check = true;
                    document.location.href = "https://www.yes24.com/Templates/FTLogin.aspx?returnUrl=" + document.location;
                }
            }).keydown(function () {
                    $(this).val('');
                    return false;
            });
                }
        });
        
        //다음 댓글 로드
        function ReplyNext(talkNo){
            $.ajax({
                url: "/Ajax/GetReplyNext?rfrcNo=37821" + "&rfrcGbNo=3000" + "&contGbNo=236" + "&talkNo=" + talkNo,
                success: function (data) {
                    if (data != null && data.length > 0) {
                        $("#replyView").html($("#replyView").html() + data);
                        
                        if (!loginCheck()) {
                            $("textarea[txtarea=replyReplyCont]").watermark(reviewDesc);
                            $("textarea[txtarea=replyCont]").watermark(reviewDesc);
                        }

                        $("textarea[txtarea=replyReplyCont]").focus(function () {
                                return false;
                        }).keydown(function () {
                                $(this).val('');
                                return false;
                        });
                    }
                }
            });
        }

        //댓글 삭제
        function replyDelete(value){
            var no = $(value).attr("talkNo");
            
            if (confirm("하위 댓글이 있을 경우 하위 댓글도 삭제됩니다. 삭제 하시겠습니까?")) {
                $.ajax({
                    type: "GET",
                    contentType: "application/json; charset=utf-8",
                    url: "/Ajax/ReplyDelete?talkNo=" + no + "&rfrcNo=37821&rfrcGbNo=3000&contGbNo=236",
                    data: "{}",
                    dataType: "json",
                    success: function (data) {
                        if(data.State != false){
                            var talkNo = ''
                            var replyCount = $("#replyView").children("div").length;

                            if(replyCount == 1){
                                talkNo = $("#replyView").children("div").attr("talkNo");
                                ReplyNext(talkNo);
                            }
                            $(value).parent().parent().parent().remove();
                            $("#ReplyCount a").html($("#ReplyCount a").html() != 0 ? $("#ReplyCount a").html() - 1 : 0);
                        }
                    }
                });
            }
        }

        //댓글의 댓글 삭제
        function replyReplyDelete(value){
            var no = $(value).attr("talkNo");
            var patNo = $(value).attr("patNo");
            if(confirm("삭제 하시겠습니까?")){
                $.ajax({
                    type: "GET",
                    contentType: "application/json; charset=utf-8",
                    url: "/Ajax/ReplyDelete?talkNo=" + no,
                    data: "{}",
                    dataType: "json",
                    success: function (data) {
                        if(data.State){
                            $(value).parent().parent().remove();

                            var childCount = parseInt($(".replyMore .childCount[talkNo=" + patNo + "]").html());
                            $(".replyMore .childCount[talkNo=" + patNo + "]").html(childCount != 0 ? childCount - 1 : 0);
                        }
                    }
                });
            }
        }
        
        //댓글 보기
        function replyToggle(value){
            $("div .replyReply[talkNo=" + $(value).attr("talkNo") + "]").toggle();
            
            var txt = $(value).parent().children("a:first-child").html();

            if(txt == "답글 닫기"){
                txt = "답글 열기";
            }
            else{
                txt = "답글 닫기";
            }
            $(value).parent().children("a:first-child").html(txt);
        }

        //댓글 등록
        function Regist(value) {
                alert(reviewDesc);
                return false;
            if(isEnabled)
            {
                alert(reviewDesc);
                return false;
            }
            var no = $(value).attr("talkNo");
            var txt = $(value).parent().children("textarea").val();

            if (txt.replace(/^ *| *$/g, '') == '') {
                alert("리뷰를 작성 해주세요.");
                return false;
            }

            if (txt.length <= 20 || txt.length >= 1000) {
                alert("최소 20자 이상 최대 1000자 미만 작성하셔야 합니다.")
                return false;
            }

            $(value).parent().children("textarea").val('');

            $.ajax({
                type: 'POST',
                url: "/Ajax/ReplyRegist",
                data: "cont=" + escape(txt) + "&talkNo=" + no + "&rfrcNo=37821" + "&rfrcGbNo=3000" + "&contGbNo=236",
                success: function (data) {
                    if (data.State == "Authenticated") {
                        alert(reviewDesc);
                        return false;
                    }
                    if (no != 0) {
                        //댓글에 댓글
                        $(".replyReply[talkNo=" + no + "]").children(".replyReplyView").prepend(data);
                                                
                        $(".replyMore .childCount[talkNo=" + no + "]").html(parseInt($(".replyMore .childCount[talkNo=" + no + "]").html()) + 1);
                    }
                    else {
                        var curCount = $("#replyView").children("div").length;
                        var replyCount = $("#ReplyCount a").html();
                        replyCount++;

                        if (curCount != 0 && curCount % 5 == 0) {
                            $("#replyView").children("div").last().remove();
                            curCount--;
                        }

                        $("#replyView").prepend(data);

                        curCount++;
                        if (replyCount > curCount) {
                            $(".replyBtnMore").show();
                        }
                        else {
                            $(".replyBtnMore").hide();
                        }
                    }
                    $("#ReplyCount a").html(replyCount);
                    
                    alert('독자 리뷰가 등록되었습니다.');
                }
            });
        }

        //댓글 로드
        function ReplyLoad(value, count) {
            $.ajax({                
                url: "/Ajax/GetReply?rfrcNo=37821&rfrcGbNo=3000&contGbNo=236" + "&count=" + count,                
                success: function (data) {
                    if (data != null && data.length != 0) {                        
                        $("#replyView").html(data);
                        
                                $("textarea[txtarea=replyReplyCont]").watermark(reviewDesc);

                        $("textarea[txtarea=replyReplyCont]").focus(function(){
                                return false;
                        }).keydown(function () {
                                $(this).val('');
                                return false;
                        });
                    }
                }
            });
        }
        
    </script>
