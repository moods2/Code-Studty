<script type="text/javascript">
    var _RECOM_WORDS_ = ['표정훈의 세상에서 두 번째로 글 잘 쓰기', '김지은의 모두 함께 읽는 책', '유희경의 이달의 시집서점', '오은의 옹기종기', '책읽아웃', '김하나의 측면돌파', '허남웅의 영화경', '이주의 신간', '장강명의 소설가라는 이상한 직업', '작가의 추천사', '주말 뭐 읽지? '];

    $(document).ready(function () {
        $('bmenu a img').hover();

        var slider;
        var changed = false;

        searchWordsRandomize();
        slider = setInterval(searchWordsRandomize, 3000);

        $('#q').mouseup(function (e) {
            e.preventDefault();
        }).keydown(function () {
            clearInterval(slider);
        }).focus(function () {
            clearInterval(slider);
        }).blur(function () {
            if (!changed) { slider = setInterval(searchWordsRandomize, 3000); }
        });

        function searchWordsRandomize() {
            var i = Math.floor(_RECOM_WORDS_.length * Math.random())
            $('#q').val(_RECOM_WORDS_[i]);
        }
    });
</script>
