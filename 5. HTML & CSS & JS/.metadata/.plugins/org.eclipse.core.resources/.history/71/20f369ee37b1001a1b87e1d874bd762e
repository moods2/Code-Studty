<script type="text/javascript">
    $(document).ready(function () {
        $('a[rel=pnav]').click(function () {
            $('ul.group1 ul:visible').hide();
            $('a[rel=pnav]').removeClass('on');

            var $this = $(this);
            $this.addClass('on');
            $this.next().toggle();

            var child = $('a[parentNo=' + $this.attr('no') + ']');
            return child.length == 0;
        });

        var $art = $('a#2762');
        if ($art.attr('rel')) {
            $art.addClass('on').next().show();
        } else {
            var $pArt = $('a#' + $art.attr('parentNo'));
            $art.parent().addClass('on');
            $pArt.addClass('on').next().show();
        }
    });
</script>
